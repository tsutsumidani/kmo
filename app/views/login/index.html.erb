<div class="col-md-3 mt-5 mx-auto">
<%= form_tag('/login/search', method: :post, class: "form-signin") do %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <div class="logo text-center">
          <%= image_tag 'logo.png'%>
        </div>
        <div class="mt-4 mb-1 mail-area">
          <input type="email" class="form-control" placeholder="Email address" name="address" value="<%= flash[:mail_address] %>" required autofocus>
<% if flash[:invalid_mail_address] %>
          <p class="mt-1 mb-1 alert-message alert alert-danger">メールアドレスが登録されていません</p>
<% end %>
        </div>
        <div class="mt-2 mb-2 password-area">
          <input type="password" class="form-control" placeholder="Password" name="password" required>
<% if flash[:invalid_password] %>
          <p class="mt-1 mb-1 alert-message alert alert-danger">パスワードが間違っています</p>
<% end %>
        </div>
        <div class="text-center">
          <input type="checkbox" value="remember-me">パスワードを記憶する
        </div>
        <div class="mt-3 mb-2 text-center">
          <button class="btn btn-primary text-center" type="submit">ログイン</button>
        </div>
        <p class="mt-3 text-muted text-center">&copy;All Rights Reserved お菓子屋さん</p>
      </div>
    </div>
  </div>
  <div class="mt-2 text-center">カスタマーユーザーではありませんか？ <button class="btn btn-sm signup mt-2" type="button">無料トライアル</button></div>
<% end %>
</div>
